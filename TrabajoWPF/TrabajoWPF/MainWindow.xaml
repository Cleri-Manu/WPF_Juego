        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/><!--26-->
        </Grid.RowDefinitions>
        <Button Name="B_Conf" Width="175" Height="70" Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="23" Grid.RowSpan="3" Margin="11,0,0,5"  Style="{StaticResource GreenButton}" Click="B_Conf_Click">Configuración</Button>
        <Button Name="B_New" Width="175" Height="70" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="23" Grid.RowSpan="3" Margin="0,0,11,5"  Style="{StaticResource GreenButton}" Click="B_New_Click">Nueva partida</Button>
        <Label Name="L_Points" Grid.Column="3" Grid.Row="23" Grid.RowSpan="3" Grid.ColumnSpan="3" Content="Puntos: 0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="{StaticResource BrushAcentoVerde}" FontSize="24"/>
    </Grid>
</Window>
